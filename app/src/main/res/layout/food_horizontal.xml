<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="185dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food_rep"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:src="@drawable/img1"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="6dp"
                android:text="Cheese-Quesadillas"
                android:textColor="#000000"
                android:textSize="12.5sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_foodname"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_bar_control"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="-78dp"
                    android:layout_marginTop="-15dp"
                    android:numStars="5"
                    android:rating="3.5"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:stepSize="1"
                    android:textAlignment="textStart" />


                <TextView
                    android:id="@+id/txt_calo_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-13dp"
                    android:text="20g"
                    android:textColor="@color/calo"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_carb_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30g"
                    android:textColor="@color/carb"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_fat_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="40g"
                    android:textColor="@color/end_wave_color"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>